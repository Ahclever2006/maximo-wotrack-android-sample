<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="workorder.android.maximo.tivoli.ibm.com.maximoworkorder">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".WorkOrderListActivity"
            android:label="@string/title_workorder_activity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".WorkOrderFormActivity"
            android:label="@string/title_workorder_activity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".WorkOrderStatusActivity"
            android:label="@string/title_workorder_activity"
            android:theme="@android:style/Theme.Holo.Dialog"></activity>

    </application>

</manifest>